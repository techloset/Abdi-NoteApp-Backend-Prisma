datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String  @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String  @unique
  hashedPassword String?
  tasks          Task[]
  buyTasks          BuyTask[]
  mainGoals          MainGoal[]
}

model Task {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  description   String
  category      String
  active        Boolean
  completed     Boolean
  currentUser   User?    @relation(fields: [currentUserId], references: [id])
  currentUserId String   @db.ObjectId
  createdAt     DateTime @default(now()) @map("created_at") // Optional timestamp field
  updatedAt     DateTime @updatedAt @map("updated_at") // Optional timestamp field
}

model BuyTask {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  isChecked Boolean
  currentUser   User?    @relation(fields: [currentUserId], references: [id])
  currentUserId String   @db.ObjectId
}

model MainGoal {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  isChecked     Boolean  
  subGoals  SubGoal[]
  currentUser   User?    @relation(fields: [currentUserId], references: [id])
  currentUserId String   @db.ObjectId

  @@map(name: "main_goals")
}

model SubGoal {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  isChecked    Boolean  
  mainGoal   MainGoal  @relation(fields: [mainGoalId], references: [id])
  mainGoalId  String  @db.ObjectId

  @@map(name: "subGoals")
}