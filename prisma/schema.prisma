datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  hashedPassword String
  profilePic     String?  
  buyTasks       BuyTask[]
  mainGoals      MainGoal[]
}

model BuyTask {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  isChecked Boolean
  currentUser   User?    @relation(fields: [currentUserId], references: [id])
  currentUserId String   @db.ObjectId
}

model MainGoal {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  isChecked     Boolean  
  subGoals  SubGoal[]
  currentUser   User?    @relation(fields: [currentUserId], references: [id])
  currentUserId String   @db.ObjectId

  @@map(name: "main_goals")
}

model SubGoal {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  isChecked    Boolean  
  mainGoal   MainGoal  @relation(fields: [mainGoalId], references: [id])
  mainGoalId  String  @db.ObjectId

  @@map(name: "subGoals")
}